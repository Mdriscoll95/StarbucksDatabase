@model Stores
<h3>@Model.Location Information</h3>

<table class="table">
    <tr>
        <th>StoreID</th>
        <th>Location</th>
        <th>Manager</th>
        <th>NumberOfEmployees</th>

    </tr>
    <tr>
        <td>@Model.StoreID</td>
        <td>@Model.Location</td>
        <td>@Model.Manager</td>
        <td>@Model.NumberOfEmployees</td>
    </tr>
</table>
<div style="display: block">
    <a href="/Stores/UpdateStores/@Model.StoreID">Update this Stores</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteStores", "Stores", "Post"))
    {
        <input type="hidden" asp-for="StoreID" value="@Model.StoreID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this value" />
    }
</div>

