@model Employees

<h3>@Model.EmployeeName Information</h3>

<table class="table">
    <tr>
        <th>Employee ID</th>
        <th>Employee Name</th>
        <th>Employee Position</th>
        <th>Employee Store</th>

    </tr>
    <tr>
        <td>@Model.EmployeeID</td>
        <td>@Model.EmployeeName</td>
        <td>@Model.EmployeePosition</td>
        <td>@Model.EmployeeStore</td>
    </tr>
</table>
<div style="display: block">
    <a href="/Employees/UpdateEmployees/@Model.EmployeeID">Update this employee</a>
</div>
<div style="display: block">

    @using (Html.BeginForm("DeleteEmployee", "Employees", "Post"))
    {
        <input type="hidden" asp-for="EmployeeID" value="@Model.EmployeeID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>
