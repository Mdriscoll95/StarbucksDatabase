@model Beverages

<h2>Create a New Beverages</h2>

@using (Html.BeginForm("InsertBeveragesToDatabase", "Beverages", "Post"))
{
    <input asp-for="idBeverages" type="hidden" value="" />

    <label asp-for="BeverageName" class="control-label">Name</label>
    <input type="text" name="BeverageName" class="form-control" value="" />

    <label asp-for="BeveragePrice" class="control-label">Price</label>
    <input type="number" step="0.01" name="BeveragePrice" class="form-control" />

    <label asp-for="BeveragesSold" class="control-label">Sold</label>
    <input type="number" step="0.01" name="BeveragesSold" class="form-control" />

    <input type="submit" value="Create Beverages" class="btn btn-primary" />
}
