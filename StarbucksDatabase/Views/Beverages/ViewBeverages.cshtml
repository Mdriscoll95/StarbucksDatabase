@model Beverages

<h3>@Model.BeverageName Information</h3>

<table class="table">
    <tr>
        <th>Beverage ID</th>
        <th>Beverage Name</th>
        <th>Beverages Sold</th>
        <th>Beverage Price</th>
    </tr>
    <tr>
        <td>@Model.idBeverages</td>
        <td>@Model.BeverageName</td>
        <td>@Model.BeveragesSold</td>
        <td>@Model.BeveragePrice</td>
        
        
    </tr>
</table>
<div style="display: block">
    <a href="/Beverages/UpdateBeverages/@Model.idBeverages">Update this Beverages</a>
</div>
<div style="display: block">

    @using (Html.BeginForm("DeleteBeverages", "Beverages", "Post"))
    {
        <input type="hidden" asp-for="idBeverages" value="@Model.idBeverages" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>